<RootWindow>:
    game_board: board
    message_label: msg_label
    undo_map_button: undo_button
    redo_map_button: redo_button

    BoxLayout:
        size: root.size
        orientation: "horizontal"

        GameBoard:
            game: root.game
            controller: root.controller
            id: board
            size_hint_x: 0.7
        
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.3

            Label:
                id: msg_label
                text: "my_text"
                size_hint_y: 0.4
            Button:
                id: undo_button
                text: "undo"
                size_hint_y: 0.3

            Button:
                id: redo_button
                text: "redo"
                size_hint_y: 0.3

